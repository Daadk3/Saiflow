generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  name              String?
  emailVerified     DateTime?
  image             String?
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  profile             Profile?
  hardwarePreferences HardwarePreference[]
  softwarePreferences SoftwarePreference[]
  ratingsGiven        Rating[]             @relation("RatingsGiven")
  ratingsReceived     Rating[]             @relation("RatingsReceived")
  shopUsers           ShopUser[]
  accounts            Account[]
  sessions            Session[]

  @@index([createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?  @db.Text
  location    String?
  website     String?
  phone       String?
  dateOfBirth DateTime?
  avatar      String?
  coverImage  String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model HardwarePreference {
  id          String   @id @default(cuid())
  userId      String
  category    String
  brand       String?
  model       String?
  specs       String?  @db.Text
  notes       String?  @db.Text
  isPrimary   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
}

model SoftwarePreference {
  id          String   @id @default(cuid())
  userId      String
  category    String
  name        String
  version     String?
  licenseType String?
  notes       String?  @db.Text
  isPrimary   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
}

model Shop {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  logo        String?
  coverImage  String?
  website     String?
  email       String?
  phone       String?
  address     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  shopUsers ShopUser[]
  products  Product[]

  @@index([slug])
  @@index([isActive])
  @@index([createdAt])
}

model ShopUser {
  id        String   @id @default(cuid())
  shopId    String
  userId    String
  role      ShopRole @default(MEMBER)
  joinedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([shopId, userId])
  @@index([shopId])
  @@index([userId])
}

enum ShopRole {
  OWNER
  ADMIN
  MODERATOR
  MEMBER
}

model Product {
  id           String   @id @default(cuid())
  shopId       String
  name         String
  slug         String
  description  String?  @db.Text
  price        Decimal  @db.Decimal(10, 2)
  currency     String   @default("USD")
  thumbnailUrl String?
  images       String[]
  fileUrl      String?
  isActive     Boolean  @default(true)
  isDigital    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  shop    Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  ratings Rating[]
  orders  Order[]

  @@unique([shopId, slug])
  @@index([shopId])
  @@index([slug])
  @@index([isActive])
  @@index([createdAt])
}

model Order {
  id              String   @id @default(cuid())
  productId       String
  productName     String
  price           Decimal  @db.Decimal(10, 2)
  customerEmail   String
  stripeSessionId String   @unique
  createdAt       DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([customerEmail])
  @@index([createdAt])
}

model Rating {
  id         String   @id @default(cuid())
  score      Int
  review     String?  @db.Text
  fromUserId String
  toUserId   String?
  productId  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  fromUser User     @relation("RatingsGiven", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User?    @relation("RatingsReceived", fields: [toUserId], references: [id], onDelete: Cascade)
  product  Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([fromUserId])
  @@index([toUserId])
  @@index([productId])
}